<h1>Angular Portfolio items</h1>

<%= link_to 'Create new Portfolio', new_portfolio_path if logged_in?(:site_admin)  %>

<% @angular_portfolio_items.each do |portfolio| %>
  <p><%= link_to portfolio.title, portfolio_show_path(portfolio) %></p>
  <p><%= portfolio.subtitle %></p>
  <p><%= portfolio.body %></p>
  <%= image_tag portfolio.thumb_image if !portfolio.thumb_image.nil? %>
  <%= link_to "Edit", edit_portfolio_path(portfolio) if logged_in?(:site_admin)  %>
  <%= link_to "Delete portfolio item", portfolio_path(portfolio), method: :delete, data: { confirm: 'Are you sure?' } if logged_in?(:site_admin) %>
<% end %>
